<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Mã khách hàng -->
    <LinearLayout
        android:id="@+id/layoutMaKhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Mã Khách Hàng:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/edtMaKhachHang"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Tên khách hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Tên Khách Hàng:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/edtTenKhachHang"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="10dp"
            android:hint="Nhập tên khách hàng"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Địa chỉ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="10dp"
            android:hint="Nhập địa chỉ"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Số điện thoại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/edtSoDienThoai"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="10dp"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:padding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btnLuu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Lưu"
        android:backgroundTint="#FF3F00"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- Nút Hủy -->
    <Button
        android:id="@+id/btnHuy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Hủy"
        android:layout_marginTop="12dp"
        android:backgroundTint="#9E9E9E"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</LinearLayout>
