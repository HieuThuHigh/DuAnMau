<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00E2FF"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Quản lý nhân viên"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Tiêu đề danh sách nhân viên -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách nhân viên"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ListView hiển thị danh sách nhân viên -->
        <ListView
            android:id="@+id/lvNhanVien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fabThemNhanVien"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <!-- FloatingActionButton (Nút thêm nhân viên) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabThemNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Thêm nhân viên" />
    </RelativeLayout>
</LinearLayout>
