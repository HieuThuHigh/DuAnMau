<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Spinner danh mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tên danh mục:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spDanhMuc"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </LinearLayout>


        <!-- Mã sản phẩm -->
        <LinearLayout
            android:id="@+id/layoutMaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Mã SP:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtMaDanhMuc"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Mã sản phẩm"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Tên sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tên SP:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtTenSanPham"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập tên sản phẩm"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Giá sản phẩm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Giá SP:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtGiaSanPham"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập giá sản phẩm"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Số lượng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtSoLuong"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập số lượng"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Đơn vị tính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Đơn vị tính:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtDonViTinh"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập đơn vị tính"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Ngày nhập -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Ngày nhập:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtNgayNhap"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập ngày nhập"
                android:textColor="#000"
                android:textSize="15sp"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>


        <!-- Nút Lưu -->
        <Button
            android:id="@+id/btnLuu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#FF0000" />

        <!-- Nút Hủy -->
        <Button
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#9E9E9E" />

    </LinearLayout>

</ScrollView>
