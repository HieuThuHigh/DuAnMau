<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Mã Nhân Viên -->
        <LinearLayout
            android:id="@+id/layoutMaNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Mã Nhân Viên:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtMaNhanVien"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Tên Nhân Viên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tên Nhân Viên:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtTenNhanVien"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập tên nhân viên"
                android:background="@android:drawable/editbox_background_normal"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Địa Chỉ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtDiaChi"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập địa chỉ nhân viên"
                android:background="@android:drawable/editbox_background_normal"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Chức Vụ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Chức vụ:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/spChucVu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- Lương -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Lương:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtLuong"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập lương nhân viên"
                android:background="@android:drawable/editbox_background_normal"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu:"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edtMatKhau"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:hint="Nhập mật khẩu nhân viên"
                android:background="@android:drawable/editbox_background_normal"
                android:textColor="#000"
                android:textSize="15sp"
                android:inputType="textPassword"/>
        </LinearLayout>

        <!-- Button Lưu -->
        <Button
            android:id="@+id/btnLuu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Button Hủy -->
        <Button
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>
