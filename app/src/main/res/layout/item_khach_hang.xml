<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <!-- Ảnh khách hàng -->
    <ImageView
        android:id="@+id/imgSanPham"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_products"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:clipToOutline="true" />

    <!-- Thông tin khách hàng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaKhachHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã khách hàng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng"
            android:textSize="15sp"
            android:textColor="#D32F2F"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvSoDienThoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện thoại"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Nút chức năng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgSuaKhachHang"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/imgXoaKhachHang"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark" />
    </LinearLayout>

</LinearLayout>
