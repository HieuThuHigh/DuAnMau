<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Hình ảnh sản phẩm bên trái -->
    <ImageView
        android:id="@+id/img_san_pham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_products"
        android:background="#EEEEEE"
        android:padding="4dp"
        android:clipToOutline="true" />

    <!-- Thông tin sản phẩm ở giữa -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:gravity="center_vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/tvGiaSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 0 VND"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Cột nút xóa và số lượng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nút xóa sản phẩm -->
            <ImageView
                android:id="@+id/imgXoaDanhMuc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_alignParentEnd="true"
                app:tint="@android:color/holo_red_dark" />
        </RelativeLayout>

        <!-- Điều chỉnh số lượng bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <!-- Nút giảm số lượng -->
            <ImageButton
                android:id="@+id/btnGiam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/minus"
                android:scaleType="fitCenter"/>

            <!-- Ô hiển thị số lượng -->
            <TextView
                android:id="@+id/tvSoLuong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp"
                android:background="#383232"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="4dp"
                android:padding="2dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Nút tăng số lượng -->
            <ImageButton
                android:id="@+id/btnTang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/plus"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
