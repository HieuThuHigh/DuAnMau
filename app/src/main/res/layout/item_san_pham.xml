<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:elevation="2dp">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgSanPham"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_products"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:clipToOutline="true" />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tvGiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 0 VNĐ"
            android:textSize="16sp"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvSoLuongTonKho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tồn kho: 0"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="3dp" />

    </LinearLayout>

    <!-- Các nút chức năng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgGioHang"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_gio_hang"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/imgSuaDanhMuc"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/imgXoaDanhMuc"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</LinearLayout>
